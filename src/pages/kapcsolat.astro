---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Kapcsolat',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Kapcsolat" title="Vedd fel velünk a kapcsolatot!" />

  <ContactUs
    id="form"
    title="Írj nekünk üzenetet!"
    subtitle="Gyors válaszokért nézd meg GYIK szekciónkat, ahol számos kérdésre megtalálhatod a választ. Ha nem, fordulj hozzánk bizalommal!"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Név',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email cím',
      },
    ]}
    textarea={{
      label: 'Üzenet',
    }}
    disclaimer={{
      label:
        'Az űrlap elküldésével hozzájárulsz ahhoz, hogy személyes adataidat a kapcsolatfelvétel céljából kezeljük.',
    }}
    description="Általában 1 munkanapon belül válaszolunk."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Elérhetőségeink"
    items={[
      {
        title: 'Általános információk',
        description: `Írj nekünk faipari termékekkel, tüzelőanyaggal, elérhetőséggel vagy megrendeléssel kapcsolatos kérdéseiddel.`,
      },
      {
        title: 'Értékesítés',
        description:
          'Ajánlatkérés, rendelés leadás, nagykereskedelmi érdeklődés vagy projektárak egyeztetése kapcsán is várjuk üzeneted.',
      },
      {
        title: 'Technikai kérdések',
        description:
          'Weboldal használatával, rendelési folyamattal vagy ajánlatkérő űrlappal kapcsolatos hibák esetén fordulj hozzánk.',
      },
      {
        title: 'Telefon',
        description: '+36 20 123 4567',
        icon: 'tabler:phone',
      },
      {
        title: 'Email',
        description: 'info@elvirabau.hu',
        icon: 'tabler:mail',
      },
      {
        title: 'Telephely',
        description: 'Gigawood telephely, 2890 Tata, Elvira út 12.',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
