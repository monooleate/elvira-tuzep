---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero2.astro';
import Note from '~/components/widgets/Note.astro';
import Note2 from '~/components/widgets/Note2.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features3.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import CategoryGrid from '../components/widgets/CategoryGrid.astro';
import productsData from '../data/products.json';
import MapWidget from '../components/widgets/MapWidget.astro';

const metadata = {
  title: 'Elvira Tüzép | Fűrészáru, Brikett és Szerkezeti Fa Érden',
  description: 'Fűrészáru, brikett és szerkezeti fa Érden. Elvira Tüzép – a Gigawood Kft. telephelye. Megbízható kiszolgálás és kedvező árak lakosságnak és kivitelezőknek.',
  ignoreTitleTemplate: true,
};

const schemaHome = [
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "Elvira Tüzép",
    "url": "https://elviratuzep.hu/"
  },
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "Gigawood Kft.",
    "url": "https://gigawood.hu/",
    "logo": "https://gigawood.hu/custom/megawood/image/cache/w220h100m00/GigaWood_logo_3_Vasvari_Design.png",
    "sameAs": [
      "https://www.facebook.com/kertifajatszoter",
      "https://www.instagram.com/gigawoodkft"
    ],
    "contactPoint": {
      "@type": "ContactPoint",
      "telephone": "+36 70 368 7809",
      "contactType": "customer service",
      "email": "info@gigawood.hu",
      "areaServed": "HU",
      "availableLanguage": "Hungarian"
    }
  },
  {
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    "name": "Elvira Tüzép",
    "image": "https://elviratuzep.hu/favicon.png",
    "telephone": "+36 70 368 7809",
    "email": "info@elviratuzep.hu",
    "url": "https://elviratuzep.hu/",
    "priceRange": "Ft",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Elvira utca 33.",
      "addressLocality": "Érd",
      "postalCode": "2030",
      "addressCountry": "HU"
    },
    "openingHoursSpecification": {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": [
        "Monday",
        "Tuesday",
        "Wednesday",
        "Thursday",
        "Friday"
      ],
      "opens": "07:00",
      "closes": "17:00"
    },
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": 47.375516,
      "longitude": 18.932424
    },
    "parentOrganization": {
      "@type": "Organization",
      "name": "Gigawood Kft.",
      "url": "https://gigawood.hu/"
    }
  }
];

---

<Layout metadata={metadata}>

    {schemaHome && (
    <script
        type="application/ld+json"
        slot="head"
        set:html={JSON.stringify(schemaHome)}
    />
    )}

  <!-- Hero Widget ******************* -->

  <Hero
  actions={[
    {
      variant: 'primary',
      text: 'Termékeink megtekintése',
      href: '/termekek',
      icon: 'tabler:shopping-cart',
    },
    {
      text: 'Kapcsolat',
      href: '/kapcsolat',
    },
  ]}
  image={{ src: '~/assets/images/hero-image.png', alt: 'Elvira Tüzép termékek' }}
>
  <Fragment slot="title">
    <span class="text-orange-500 text-5xl md:text-6xl">Elvira Tüzép</span><br />
    <span class="text-2xl md:text-3xl">Építőanyag és tüzelőanyag egy helyen</span>
  </Fragment>

  <Fragment slot="subtitle">
    Építkezel vagy fűtenél? Nálunk mindent megtalálsz az osztrák minőségi faanyagtól a brikettig.
  </Fragment>
</Hero>

  <!-- Note Widget ******************* -->

  <Note title="Filozófiánk:" description="Minőség, megbízhatóság és a fa iránti tisztelet vezérel." />

  <CategoryGrid categories={productsData} />

  <Note2   
    action={{
    variant: 'primary',
    text: 'Gigawood.hu',
    href: 'https://gigawood.hu',
    target: '_blank',
    icon: 'tabler:shopping-cart',
  }}
    title="Játszótornyokat és kertészeti fa termékeink:" 
    description="" 
  />
  
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Termék ajánlataink',
        href: '/termekek',
        target: '_blank',
        icon: 'tabler:shopping-cart',
      },
    ]}
  >
    <Fragment slot="title">
      Elvira&nbsp;Tüzép&nbsp;+&nbsp;<br class="block sm:hidden" /><span class="sm:whitespace-nowrap">Pabst&nbsp;Holz</span>
    </Fragment>

    <Fragment slot="subtitle">
      Cégünk elkötelezett <strong>a kiváló minőségű építési faáru </strong> mellett, ezért kizárólag osztrák forrásból, a megbízható <strong>Pabst-Holz</strong> gyártótól szerezzük be termékeinket. Fenntartható erdőgazdálkodásból származó, precízen feldolgozott faanyagot kínálunk, amely tartósságával és méretpontosságával is kiemelkedik.</Fragment>
  </CallToAction>

  <!-- Features Widget *************** -->

  <Features
  id="features"
  tagline="Előnyeink"
  title="Amit az Elvira Tüzép kínál"
  subtitle="Több mint építőanyag – megbízható partner vagyunk a kivitelezés és fűtés terén, magánszemélyeknek és cégeknek egyaránt."
  items={[
/*     {
      title: 'Megbízható kiszállítás',
      description:
        'Pontosan, határidőre szállítunk – akár nagyobb mennyiséget is. A logisztika nálunk nem kérdés, hanem erősség.',
      icon: 'tabler:truck-delivery',
    }, */
    {
      title: 'Szakértelem és tanácsadás',
      description:
        'Segítünk választani az igényeidnek megfelelő faanyag vagy tüzelőanyag közül – tapasztalattal, nem sablonokkal.',
      icon: 'tabler:messages',
    },
    {
      title: 'Széles termékválaszték',
      description:
        'BSH, KVH, brikett, tűzifa, fűrészáru – minden egy helyen, folyamatos készlettel, minőségre válogatva.',
      icon: 'tabler:building-warehouse',
    },
    {
      title: 'Versenyképes árak',
      description:
        'Árainkat mindig a piaci realitásokhoz igazítjuk, így korrekt és hosszú távon is fenntartható együttműködést kínálunk.',
      icon: 'tabler:coin',
    },
    {
      title: 'Gyors ajánlatadás',
      description:
        'Nincs napokig tartó várakozás – kérj ajánlatot, és 2 munkanapon belül visszajelzünk. Így időben tudsz tervezni.',
      icon: 'tabler:clock',
    },
    {
      title: 'Tapasztalat és stabil háttér',
      description:
        'Több éves iparági tapasztalat, megbízható beszállítók és stabil működés biztosítja, hogy számíthatsz ránk.',
      icon: 'tabler:shield-check',
    },
  ]}
/>

