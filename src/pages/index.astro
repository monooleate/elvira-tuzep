---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero2.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features3.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import CategoryGrid from '../components/widgets/CategoryGrid.astro';
import productsData from '../data/products.json';
import MapWidget from '../components/widgets/MapWidget.astro';

const metadata = {
  title: 'AstroWind — Free template for creating websites with Astro + Tailwind CSS',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
  actions={[
    {
      variant: 'primary',
      text: 'Termékeink megtekintése',
      href: '/termekek',
      icon: 'tabler:shopping-cart',
    },
    {
      text: 'Kapcsolat',
      href: '/kapcsolat',
    },
  ]}
  image={{ src: '~/assets/images/hero-image.png', alt: 'Elvira Bau termékek' }}
>
  <Fragment slot="title">
    <span class="text-blue-600">Elvira Bau</span><br />
    Építőanyag és tüzelőanyag egy helyen
  </Fragment>

  <Fragment slot="subtitle">
    Megbízható szállítás építkezésekhez és fűtéshez. Faanyag, brikett, betonacél, pellet – mindent megtalálsz nálunk.
  </Fragment>
</Hero>

  <!-- Note Widget ******************* -->

  <Note title="Filozófiánk:" description="Minőség, megbízhatóság és a fa iránti tisztelet vezérel." />


  <CategoryGrid categories={productsData} />

  <!-- Features Widget *************** -->

  <Features
  id="features"
  tagline="Előnyeink"
  title="Amit az Elvira Bau kínál"
  subtitle="Több mint építőanyag – megbízható partner vagyunk a kivitelezés és fűtés terén, magánszemélyeknek és cégeknek egyaránt."
  items={[
    {
      title: 'Megbízható kiszállítás',
      description:
        'Pontosan, határidőre szállítunk – akár nagyobb mennyiséget is. A logisztika nálunk nem kérdés, hanem erősség.',
      icon: 'tabler:truck-delivery',
    },
    {
      title: 'Szakértelem és tanácsadás',
      description:
        'Segítünk választani az igényeidnek megfelelő faanyag vagy tüzelőanyag közül – tapasztalattal, nem sablonokkal.',
      icon: 'tabler:messages',
    },
    {
      title: 'Széles termékválaszték',
      description:
        'BSH, KVH, brikett, tűzifa, vasanyag – minden egy helyen, folyamatos készlettel, minőségre válogatva.',
      icon: 'tabler:building-warehouse',
    },
    {
      title: 'Versenyképes árak',
      description:
        'Árainkat mindig a piaci realitásokhoz igazítjuk, így korrekt és hosszú távon is fenntartható együttműködést kínálunk.',
      icon: 'tabler:coin',
    },
    {
      title: 'Gyors ajánlatadás',
      description:
        'Nincs napokig tartó várakozás – kérj ajánlatot, és 1 munkanapon belül visszajelzünk. Így időben tudsz tervezni.',
      icon: 'tabler:clock',
    },
    {
      title: 'Tapasztalat és stabil háttér',
      description:
        'Több éves iparági tapasztalat, megbízható beszállítók és stabil működés biztosítja, hogy számíthatsz ránk.',
      icon: 'tabler:shield-check',
    },
  ]}
/>

<MapWidget />

<BlogLatestPosts
  title="Böngéssz az Elvira Bau infótárában"
  information={`Cikkeink és tudástárunk segítenek eligazodni az építő- és tüzelőanyagok világában.
  Legyen szó BSH gerendákról, brikettekről vagy gyalult fenyőről – mindenről közérthető útmutatót és hasznos tanácsokat kínálunk.
  Olvasd el legújabb bejegyzéseinket, és hozd meg a legjobb döntést vásárlás előtt.`}
/>


  
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get template',
        href: 'https://github.com/onwidget/astrowind',
        target: '_blank',
        icon: 'tabler:download',
      },
    ]}
  >
    <Fragment slot="title">
      Astro&nbsp;+&nbsp;<br class="block sm:hidden" /><span class="sm:whitespace-nowrap">Tailwind CSS</span>
    </Fragment>

    <Fragment slot="subtitle">
      Be very surprised by these huge fake numbers you are seeing on this page. <br class="hidden md:inline" />Don't
      waste more time! :P
    </Fragment>
  </CallToAction>
</Layout>
