    {discounted.length > 3 && (
  <div class="overflow-x-auto scroll-smooth max-w-4xl">
    <div class="inline-flex min-w-[1100px] gap-4 px-1">
      {discounted.map((product) => (
        <a
          href={`/termekek/${product.categorySlug}/${product.slug}`}
          class="shrink-0 w-[260px] border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden shadow-sm hover:shadow-md transition bg-white dark:bg-gray-800"
        >
          <div class="relative">
            <img
              src={product.image}
              alt={product.name}
              class="w-full h-48 object-cover"
              loading="lazy"
            />
            <div class="absolute top-2 left-2 bg-red-600 text-white text-xs font-bold px-3 py-1 rounded shadow">
              -{product.finalDiscountPercent}%
            </div>
          </div>
          <div class="p-4">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{product.name}</h3>
            <div class="text-sm text-gray-700 dark:text-gray-300 mt-2">
              <span class="line-through text-gray-400 mr-2">
                {product.price.toLocaleString('hu-HU')} Ft
              </span>
              <span class="text-red-600 font-bold">
                {product.finalDiscountPrice.toLocaleString('hu-HU')} Ft
              </span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
)}

  </div>
</section>
